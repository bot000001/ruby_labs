<%= form_with html: { class: 'form' }, model: report do |form| %>
  <%= render 'errors/form_errors', model: report %>

  <div class='form-group'>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: :title %>
  </div>

  <div class='form-group'>
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: :description %>
  </div>

  <div class='form-group'>
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :format_user, prompt: true %>
  </div>

  <div class='form-buttons'>
    <%= form.submit 'Save', class:'btn' %>
    <%= link_to 'Back', root_path, class:'btn' %>
  </div>
<% end %>